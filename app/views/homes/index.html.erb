<p>検索</p>
<%= form_tag(recipes_path,:method => 'get') do %>
  <%= text_field_tag :recipe %>
  <%= submit_tag 'Search', :title => nil %>
<% end %>

<ul>
  <% @recipes.each do |recipe| %>
  <li>
    <%= attachment_image_tag @recipe, :photo, fill:"40x40", size:"40x40" %>
    <%= link_to recipe.title, recipe %>
    <%= recipe.created_at %>
  </li>
  <% end %>
</ul>