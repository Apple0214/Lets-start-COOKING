<h2>新規アカウント登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="signpu-field">
  <%= f.label :"名前" %>
  <%= f.label :"(姓)" %>
  <%= f.text_field :name_kanji_sei, autofocus: true, autocomplete: "name_kanji_sei" %>
  <%= f.label :"(名)" %>
  <%= f.text_field :name_kanji_mei, autofocus: true, autocomplete: "name_kanji_mei" %>
  </div>

  <div class="signup-field">
  <%= f.label :"フリガナ" %>
  <%= f.label :"(セイ)" %>
  <%= f.text_field :name_kana_sei, autofocus: true, autocomplete: "name_kana_sei" %>
  <%= f.label :"(メイ)" %>
  <%= f.text_field :name_kana_mei, autofocus: true, autocomplete: "name_kana_mei" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


<h4>既に登録済みの方</h4>
<p><%= link_to "こちら", new_session_path(resource_name) %> からログインしてください。</p>
