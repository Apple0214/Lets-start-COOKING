<% if current_user.likes.find_by(recipe_id: recipe.id) %>
  <%= link_to unlike_path(recipe.id), method: :delete, remote: true do %>
        <span class = "iine__button">❤️<%= recipe.likes.count %></span>
    <% end %>
  <% else %>
    <%= link_to like_path(recipe.id), method: :post, remote: true do %>
        <span class = "iine__button">♡️<%= recipe.likes.count %></span>
   <% end %>
<% end %>

