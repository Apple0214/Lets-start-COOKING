<div class="container">
  <div class="row">
<h2>料理レシピ</h2>
<%= form_with model: @recipe, local: true do |f| %>
  料理名&ensp;&nbsp;&nbsp;&nbsp;<%= f.text_field :title %><br >
  写真<%= f.attachment_field :photo %><br >
  材料&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.text_field :item %><br >
  作り方&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.text_field :cooking %><br >
  <fieldset>
  ジャンル&nbsp;<%= f.text_field :genre_id, list: "genre", autocomplete: "on" %><br >
  <datalist id="genre">
  <% @genres.each do |genre| %>
  <option value="<%= genre.name %>">
  <% end %>
  </datalist>
  <%= f.submit 'レシピ作成' %>
  </fieldset>
  <%= link_to 'ホーム画面に戻る', root_path %>
<% end %>
  </div>
</div>
