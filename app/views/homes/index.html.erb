<div class="container">
  <div class="row">
    <div class="col-sm-9">
      <h3>レシピ一覧</h3>
      <ul>
        <% @recipes.each do |recipe| %>
      <li>
        <%= attachment_image_tag @recipe, :photo, fill:"40x40", size:"40x40" %>
        <%= link_to recipe.title, recipe %>
        <%= recipe.created_at.strftime("%Y-%m-%d %H:%M") %>
      </li>
      <% end %>
    </ul>
    </div>
  </div>
</div>