<div>
<h2>全てのジャンル</h2>
<p>（全<%= @genres.count %>件）</p>
</div>
<div>
	<table class="table table-hover table-inverse">
	<tr>
	<th>ジャンル名</th>
	</tr>
	<% @genres.each do |genre| %>
	<tr>
	<th><%= link_to genre_path(genre.id) do %>
